## YooKassa (TEST)
# Возьмите тестовые Shop ID и Secret Key в кабинете ЮKassa.
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

## Optional
# Куда ЮKassa вернёт пользователя после оплаты (redirect confirmation).
# По умолчанию используется http://localhost:3000/?yookassaReturn=1
APP_RETURN_URL=http://localhost:3000/?yookassaReturn=1
# Для Railway backend + GitHub Pages frontend:
# APP_RETURN_URL=https://borisgadaborshev.github.io/?yookassaReturn=1

# Порт локального сервера (default 4000)
PORT=4000

## Frontend mode
# livpic | prompt-check
VITE_APP_MODE=livpic
# Base URL of backend API for production/static hosting (e.g. https://api.example.com)
# Leave empty for local dev with Vite proxy.
VITE_API_BASE_URL=
# Для Railway backend + GitHub Pages frontend:
# VITE_API_BASE_URL=https://<your-railway-domain>.up.railway.app

## LLM prompt quality analysis
# Any OpenAI-compatible endpoint (default: OpenRouter)
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
# Example model for OpenRouter:
LLM_MODEL=openai/gpt-4o-mini
# API key for выбранного LLM провайдера
LLM_API_KEY=your_llm_api_key

